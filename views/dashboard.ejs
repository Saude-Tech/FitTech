<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FitTech | Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background: #f7f8fc;
      }
      .sidebar {
        min-height: 100vh;
        background: linear-gradient(180deg, #101628, #0f1527);
        color: #E9EDFF;
        padding: 1rem;
      }
      .sidebar .nav-link {
        color: #C9D3FF;
        border-radius: .5rem;
        margin-bottom: .25rem;
      }
      .sidebar .nav-link.active,
      .sidebar .nav-link:hover {
        background: rgba(90,139,250,.18);
        color: #fff;
      }
      .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 12px rgba(0,0,0,.05);
      }
      .badge-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: .75rem;
        color: #fff;
      }
      .bg-blue { background: linear-gradient(135deg,#5A8BFA,#769dff); }
      .bg-green { background: linear-gradient(135deg,#2AC6A9,#57E3C5); }
      .bg-yellow { background: linear-gradient(135deg,#F6C34A,#FFD986); color:#573d00; }
      .bg-pink { background: linear-gradient(135deg,#F36D6D,#FFA0A0); }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar">
          <div class="d-flex align-items-center mb-3">
            <div class="badge-icon bg-blue me-2"><i data-lucide="activity"></i></div>
            <h5 class="mb-0">FitTech</h5>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="#"><i data-lucide="layout-dashboard"></i> Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"><i data-lucide="heart-pulse"></i> Saúde</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"><i data-lucide="dumbbell"></i> Treinos</a>
            </li>
          </ul>
        </nav>

        <!-- Conteúdo -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-3">
          <!-- Header -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dashboard</h2>
            <div class="d-flex align-items-center gap-2">
              <button class="btn btn-light rounded-circle p-2"><i data-lucide="bell"></i></button>
              <div class="d-flex align-items-center bg-light rounded-pill px-3 py-1">
                <div class="badge-icon bg-blue me-2">BR</div>
                <strong>Bruno</strong>
              </div>
            </div>
          </div>

          <!-- KPIs -->
          <div class="row g-3 mb-4">
            <div class="col-md-3">
              <div class="card p-3 d-flex flex-row align-items-center">
                <div class="badge-icon bg-blue me-3"><i data-lucide="flame"></i></div>
                <div>
                  <h5 class="mb-0">--</h5>
                  <small class="text-muted">Calorias</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3 d-flex flex-row align-items-center">
                <div class="badge-icon bg-green me-3"><i data-lucide="footprints"></i></div>
                <div>
                  <h5 class="mb-0">--</h5>
                  <small class="text-muted">Passos</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3 d-flex flex-row align-items-center">
                <div class="badge-icon bg-yellow me-3"><i data-lucide="heart-pulse"></i></div>
                <div>
                  <h5 class="mb-0">--</h5>
                  <small class="text-muted">Batimento</small>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card p-3 d-flex flex-row align-items-center">
                <div class="badge-icon bg-pink me-3"><i data-lucide="dumbbell"></i></div>
                <div>
                  <h5 class="mb-0">--</h5>
                  <small class="text-muted">Treino</small>
                </div>
              </div>
            </div>
          </div>

          <!-- Seções -->
          <div class="row g-3">
            <div class="col-md-4">
              <div class="card p-4 text-center">
                <i data-lucide="bar-chart-3" size="48" class="mb-2 text-muted"></i>
                <p class="text-muted">Sem dados disponíveis</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card p-4 text-center">
                <h5>Agenda</h5>
                <p class="text-muted">Sem dados disponíveis</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card p-4 text-center">
                <h5>Ranking Semanal</h5>
                <p class="text-muted">Sem dados disponíveis</p>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      lucide.createIcons();
    </script>
  </body>
</html>
